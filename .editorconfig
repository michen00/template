root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
indent_size = 2
indent_style = space
space_redirects = true
switch_case_indent = true

[*.json,xml]
indent_size = 2
indent_style = space

[*.{conf,java,js,jsp,php,tf,ts}]
indent_size = 2
indent_style = space
max_line_length = 88

[*.{yaml,yml}]
indent_size = 2
indent_style = space
max_line_length = 100

[*.{py}]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab
