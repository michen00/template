root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
indent_size = 2
indent_style = space
simplify = true
space_redirects = true
switch_case_indent = true

[*.{conf,java,js,json,jsp,php,tf,ts,xml,yaml,yml}]
indent_size = 2
indent_style = space

[*.{py}]
indent_size = 4
indent_style = space

[.githooks/*]
indent_size = 2
indent_style = space
space_redirects = true
switch_case_indent = true

[Makefile]
indent_style = tab
